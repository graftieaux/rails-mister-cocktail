<div class="container">
  <%= simple_form_for [cocktail, dose] do |f| %>
    <% if dose.errors.any? %>
      <div class="errors-container">
        <ul>
          <% dose.errors.full_messages.each do |dose| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit %>
  <% end %>
</div>
